generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id      Int      @id @default(autoincrement())
  email   String   @unique
  name    String?
  bookmarks Bookmark[]
}

model Bookmark {
  id Int @id @default(autoincrement())
  url String
  title String?
  preview String?
  owner User? @relation(fields: [ownerId], references: [id])
  ownerId Int?
}
