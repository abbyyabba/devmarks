{
  "name": "devmarks-monorepo",
  "private": true,
  "version": "1.0.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:frontend": "pnpm --filter frontend dev",
    "dev:backend": "pnpm --filter backend start",

    "prisma:generate": "pnpm --filter prisma-service prisma generate",
    "prisma:migrate": "pnpm --filter prisma-service prisma migrate dev",
    "prisma:deploy": "pnpm --filter prisma-service prisma migrate deploy",
    "prisma:studio": "pnpm --filter prisma-service prisma studio",
    "dev:prisma": "pnpm --filter prisma-service dev"
  }
}
